<h1>Burgers!</h1>

<h2>Devour a Burger!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Devour It!</button>
        </form>

        
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>You Ate It!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Delicious!</button>
        </form>

       
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="bur">Burger:</label>
    <input type="text" id="bur" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Ate It!<br>
    <input type="radio" name="devoured" value="0"> Eat it!
  </div>

  <button type="submit">Add Burger!</button>
</form>
